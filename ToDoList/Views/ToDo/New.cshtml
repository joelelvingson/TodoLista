@model dynamic  
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="newRental">
    <div class="container">
        <h2>Dina listor</h2>
        <div id="newToDo">
            <a id="test"></a>
            <div class="col-lg-3 text-center">
                <div class="span3 offset3 well">
                    <input id="namnet" type="text" value="Namnge mig" />

                    <a class="ToDoLists btn btn-primary">Skapa lista</a>
                </div>
            </div>
        </div>

    </div>
</form>


@section scripts{
    @*<button class='ToDoLists'>Skapa lista</button>*@
    <script>



        $(document).ready(function () {

                $.ajax( {
                    url: "/api/ToDo",
                    method: "GET",
                    success: function(data)
                    {
                        $.each(data, function () {

                            $("#newToDo").prepend("<div class='sad col-lg-3 text-center '><div class='span3 offset3 well'><span class='glyphicon glyphicon-edit pull-left'></span><span data-ToDo-Id=" + this.Id + " class='" + this.Id + " glyphicon glyphicon-trash pull-right'></span><label class='fullnam'>" + this.Name + "</label><div><a href='/ToDo/edit/" + this.Id + "' class='btn btn-primary'>Öppna lista</a></div></div></div>");
                            $('.fullnam').on("click", da);
                            $('.' + this.Id).on("click", deleteList);

                        })
                    }

                });

            function add() {
                var name = $("#namnet").val();
                var vm = {
                    name
                };
                if (name === "") {
                    console.log(NEJ);
                }
                else if (name.length <= 3) {
                    console.log(NEJ);
                }
                else {
                    vm.name = name;
                    $.ajax({
                        url: "/api/ToDo/",
                        method: "post",
                        data: vm,
                        success: function (data) {
                        $("#newToDo").prepend("<div class='sad col-lg-3 text-center '><div class='span3 offset3 well'><button class=' glyphicon glyphicon-edit pull-left'></button><button class='daaa glyphicon glyphicon-trash pull-right'></button><label class='fullnam'>" + name + "</label><div><a href='/ToDo/edit/" + data.Id + "' class='btn btn-primary'>Öppna lista</a></div></div></div>");
                        $('.fullnam').on("click", da);
                        $('.daaa').on("click", deleteList);
                    }
                    });

                }


            };

            $(".ToDoLists").on("click", add);

            function deleteList() {
                var button = $(this);
                $.ajax( {
                    url: "/api/ToDo/" + button.attr("data-ToDo-Id"),
                    method: "DELETE",
                    success: function () {

                    }

                });
                $(this).parents(".sad").remove();

            };

            function da() {
                var name = $(this).text();
                $(this).html('');
                $('<input></input>')
                  .attr({
                      'type': 'text',
                      'name': 'fname',
                      'id': 'txt_fullname',
                      'size': '30',
                      'value': name
                  })
                  .appendTo('.fullnam');
                $('#txt_fullname').focus();
            };

            $(document).on('blur', '#txt_fullname', function () {
                var name = $(this).val();
                if (name == "" || name == " ") {
                    name = "NULL";
                }
                //alert('Make an AJAX call and pass this parameter >> name=' + name);
                $('.fullnam').text(name);
            });

            $('.fullnam').keypress(function (e) {
                if (e.which == 13) {//Enter key pressed
                    var name = $(this).val();
                    if (name == "" || name == " ") {
                        name = "NULL";
                    }
                    //alert('Make an AJAX call and pass this parameter >> name=' + name);
                    $('.fullnam').text(name);
                }
            });





        });

    </script>

}
